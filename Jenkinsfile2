
pipeline {
    agent any
    stages {
        stage('Check enronment') {
            steps {
                sh script: 'PATH=/Library/Frameworks/Python.framework/Versions/3.6/bin/:$PATH'
                sh 'python --version'
                sh 'apt install python3 -y'
                sh 'python --version'
                sh '-m pip install --upgrade pip'
                sh 'which pip'
                sh script: "pip install virtualenv"
                sh 'which virtualenv'
            }
        }
        stage('build') {
            steps {
                sh 'virtualenv venv && pip install -r requirements.txt && python dashboard1.py'
            }
        }
    }
}
