
pipeline {
    agent any
    stages {
        stage('evironment') {
            steps {
                sh script:'''
                            #/bin/bash
                              export PATH=/usr/local/bin:$PATH
                              python --version
                              pip install --upgrade pip --user
                              pip install virtualenv
                              virtualenv .venv
                              source .venv/bin/activate
                              pip install --user -r requirements.txt
                              python dashboard1.py
                                '''
              
            }
        }
    }
}
